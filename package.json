{
    "name": "srplife",
    "description": "Theme for srp.life.",
    "demo": "http://srp.life",
    "version": "2.0.0",
    "engines": {
        "ghost": ">=6.0.0"
    },
    "scripts": {
        "zip": "npm run build:css && rm -rf ./dist && mkdir -p ./dist && zip -r ./dist/srplife.zip . -x \"*.zip\"\"dist/*\" \"*.git*\" \"node_modules/*\" \"reference_material/*\" \"assets/css/src/*\" \"preview/*\"",
        "build:css": "postcss assets/css/src/main.css -o assets/css/screen.css",
        "dev:css": "postcss assets/css/src/main.css -o assets/css/screen.css --watch",
        "preview": "npm run build:css && node test-theme.js"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "config": {
        "posts_per_page": 6,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": {
            "exclude": [
                "callout"
            ]
        }
    },
    "author": {
        "name": "Seraphim Pardee",
        "email": "me@srp.life",
        "url": "https://srp.life"
    },
    "gscan": "v6",
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "retro",
        "cde",
        "solaris"
    ],
    "devDependencies": {
        "autoprefixer": "^10.4.22",
        "cssnano": "^7.1.2",
        "fs-extra": "^11.3.2",
        "handlebars": "^4.7.8",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.1",
        "postcss-nested": "^7.0.2"
    }
}