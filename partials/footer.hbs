<footer class="site-footer text-center">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                {{^if @member}}
                {{#is "index, post, page, tag, author"}}
                {{> subscription}}
                {{/is}}
                {{/if}}
                <div class="copyright">
                    {{#if @custom.copyright_text_override}}
                    {{@custom.copyright_text_override}}
                    {{else}}
                    &copy; {{date format="YYYY"}} <a href="{{@site.url}}">{{@site.title}}</a> - {{{t "Published with {ghostLink}" ghostLink="<a href=\"https://ghost.org/\">Ghost</a>"}}}
                    <br />
                    <br />
                    <a href="https://github.com/SeraphimRP/srplife_theme">Theme</a> built upon the work of <a href="https://github.com/halfrost">@halfrost</a>.
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</footer>