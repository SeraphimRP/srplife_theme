{{!< default}}

{{#post}}
<div class="site-content-wrap">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="post-wrap">
                    <article class="post-single {{post_class}} h-entry">
                        <div class="post-header d-flex {{#if feature_image}}has-image"
                            style="background-image: url({{feature_image}});{{/if}}">
                            <div class="header-content-wrap">
                                <a style="display: none;" class="u-url" href="{{url}}"></a>
                                {{#primary_tag}}
                                <div class="primary-tag text-center"><a href="{{url}}">{{name}}</a></div>
                                {{/primary_tag}}
                                <h1 class="post-title text-center p-name">{{title}}</h1>
                                <span class="post-subtitle text-center">{{excerpt}}</span>
                                <div class="post-meta mx-auto d-flex justify-content-between">
                                    <div class="reading-time">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</div>
                                    <time class="date dt-published" datetime="{{date format=" YYYY-MM-DD hh:mm:ss"}}">{{date format="DD MMMM YYYY"}}</time>
                                </div>
                            </div>
                        </div>
                        <div class="post-content e-content">
                            {{#if access}}
                            {{content}}
                            {{else}}
                            {{{html}}}
                            <div class="no-access-message">
                                {{t "You don't have access to this post on"}} <strong>{{@site.title}}</strong> {{t
                                "at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access."}}
                            </div>
                            <div class="post-upgrade-cta-box text-center">
                                {{#if @member}}
                                <h2 class=" cta-title">{{t "This post is for paying subscribers only"}}</h2>
                                {{else}}
                                <h2 class=" cta-title">{{t "This post is for subscribers only"}}</h2>
                                {{/if}}
                                <a class="btn btn-secondary btn-cta" href="{{@site.url}}/#/portal/signup">{{t "Subscribe now"}}</a>
                                <p class="sign-in-cta"><small>{{t "Already have an account?"}} <a href="{{@site.url}}/#/portal/signin">{{t "Sign in"}}</a></small></p>
                            </div>
                            {{/if}}
                        </div>
                        <div class="post-footer">
                            {{#if tags}}
                            <div class="tags"><span class="prefix">{{t "Published in:"}}</span><span class="p-category">{{tags separator=""}}</span></div>
                            {{/if}}
                            {{#if @custom.show_author_info_card}}
                            {{> about-author}}
                            {{/if}}
                            {{#if @custom.show_share_buttons}}
                            {{> share}}
                            {{/if}}
                            {{comments title="Comments" count=false mode="auto" saturation=80}}
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- {{> prev-next}} - until i can figure out how to make this ignore Daily Orthodox posts -->
{{/post}}
